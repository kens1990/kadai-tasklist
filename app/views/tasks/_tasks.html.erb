<table class="table table-striped">
    

   <tr>
    <th class="text-center">タスク</th>
    <th class="text-center">ステータス</th>
    <th></th>
    <th></th>
       </tr>
    <% tasks.each do |task| %>
   <tr>
      
       <td >
<%= task.content %> 
       </td>
       <td>

           <%= task.status %>
       </td>
       <td>
    <% if current_user == task.user %>
    
<%= link_to "詳細", task, class: 'btn btn-flash btn-xs' %>
    <% end %>
       </td>
       
       <td>
    <% if current_user == task.user %>
        
    <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>             
         
    <% end %>     
       </td>
      
   </tr>   
<% end %> 

    
<%= paginate tasks %>

</table>
